{
    "name": "my_gulp",
    "version": "1.3.0",
    "description": "my essential gulp plugins",
    "license": "MIT",
    "author": "Denys Danchuk <beebeekei@gmail.com>",
    "repository": {
        "type": "git",
        "url": "git@github.com:beebeekei/my_gulp.git"
    },
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "devDependencies": {
        "beepbeep": "^1.2.0",
        "gulp": "^3.9.1",
        "gulp-consolidate": "^0.2.0",
        "gulp-iconfont": "^8.0.0",
        "gulp-livereload": "^3.8.1",
        "gulp-rename": "^1.2.2",
        "gulp-sass": "^2.3.1",
        "gulp-sourcemaps": "^1.6.0",
        "gulp-svg-sprite": "^1.3.3",
        "gulp-util": "^3.0.7",
        "gulp.spritesmith": "^6.2.1",
        "vinyl-ftp": "^0.4.5"
    },
    "settings": {
        "sass": {
            "input": "./scss/**/*.scss",
            "output": "./css"
        },
        "iconfont": {
            "input": "./fonts/icons/",
            "templates": "./scss/global/",
            "output": "./fonts/",
            "fontName": "iconFontName"
        },
        "svgsprite": {
            "svgOutput": "../images/svg-sprite",
            "sassOutput": "../scss/global/_svg-sprite",
            "svgInput": "images/svg",
            "outputMainDir": "."
        },
        "spritesmith": {
            "input": "./images/sprite/*.*",
            "outputImage": "./images/",
            "outputSass": "./scss/global/"
        },
        "vinylFtp": {
            "user": "user_name",
            "password": "password",
            "host": "host_address",
            "port": "21",
            "remoteFolder": ".",
            "localWatchFolder": "."
        }
    }
}
